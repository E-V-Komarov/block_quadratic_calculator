<form id="quadratic-calculator-form" method="post" action="{{{action_url}}}">
    <input type="hidden" name="sesskey" value="{{{sesskey}}}">
    <div class="card-body p-3">
        <div class="form-group row fitem">
            <label class="d-inline word-break">{{#str}}block_discription, block_quadratic_calculator{{/str}}:<br>Ax<sup>2</sup> + Bx + C + 0</label>
        </div>
        <div class="collapsible-actions">
            <a href="#" id="open-history">{{#str}}history, block_quadratic_calculator{{/str}}</a>
        </div>

        <div class="form-group row fitem">
            <label for="a" class="d-inline word-break">{{#str}}coefficienta, block_quadratic_calculator{{/str}}:</label>
            <input type="number" id="a" name="a" class="form-control" title="{{#str}}input_title, block_quadratic_calculator{{/str}}" step="any">
        </div>

        <div class="form-group row fitem">
            <label for="b" class="d-inline word-break">{{#str}}coefficientb, block_quadratic_calculator{{/str}}:</label>
            <input type="number" id="b" name="b" class="form-control" title="{{#str}}input_title, block_quadratic_calculator{{/str}}" step="any">
        </div>

        <div class="form-group row fitem">
            <label for="c" class="d-inline word-break">{{#str}}coefficientc, block_quadratic_calculator{{/str}}:</label>
            <input type="number" id="c" name="c" class="form-control" title="{{#str}}input_title, block_quadratic_calculator{{/str}}" step="any">
        </div>

        <div class="form-group row fitem">
            <input type="submit" value="{{#str}}calculate, block_quadratic_calculator{{/str}}" class="btn btn-primary float-right float-sm-right">
        </div>
        <div id="result" class="form-group row fitem" style="display: none"></div>
    </div>
</form>